{
  "name": "@bprogress/core",
  "version": "1.3.0",
  "type": "module",
  "description": "NProgress-inspired library with more features",
  "repository": {
    "type": "git",
    "url": "https://github.com/Skyleen77/bprogress.git"
  },
  "bugs": {
    "url": "https://github.com/Skyleen77/bprogress/issues"
  },
  "homepage": "https://bprogress.vercel.app/",
  "author": "Skyleen",
  "license": "MIT",
  "keywords": [
    "nprogress",
    "progress",
    "bar",
    "bprogress"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./css": "./dist/index.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "build": "tsup",
    "dev": "tsup --watch",
    "pub:release": "pnpm publish --no-git-checks --access public",
    "pub:canary": "pnpm publish --no-git-checks --tag canary --access public",
    "pub:beta": "pnpm publish --no-git-checks --tag beta --access public",
    "prepublishOnly": "pnpm test && pnpm lint && pnpm build",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.10",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.0.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "typescript": "5.5.4",
    "eslint": "^9.19.0"
  }
}
